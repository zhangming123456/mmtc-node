{
  "name": "node-servers",
  "script": "./bin/www",
  "cwd": "./",
  "watch": [
    "bin",
    "routers",
    "tasks",
    "models",
    "config",
    "build"
  ],
  "ignore_watch": [
    "node_modules",
    "logs",
    "public",
    "views"
  ],
  "watch_options": {
    "followSymlinks": false
  },
  "error_file": "logs/err.log",
  "out_file": "logs/out.log",
  "merge_logs": true,
  "log_date_format": "YYYY-MM-DD HH:mm Z",
  "env": {
    "NODE_ENV": "development"
  }
}